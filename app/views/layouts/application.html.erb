<!DOCTYPE html>
<html>
  <head>
    <title>Project 2B</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
    <% end %>

    <h1><%= heading_detail( yield(:heading) ) %></h1>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "2B", root_path, class: 'navbar-brand' %>
          <!-- <a class="navbar-brand" href="#">2B</a> -->
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Home", root_path %>
          </li>
          <li>
            <%= link_to "About", about_path %>
          </li>

          <% if logged_in? %> <!-- Already logged in_-->
            <li>
                <%= link_to "My page", current_user %>
            </li>
            <li>
              <%= link_to "Logout", logout_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "Signup", register_path %>
            </li>
            <li>
              <%= link_to "Login", login_path %>
            </li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <div class="jumbotron">
        <%= yield %>
      </div>
    </div>

    <footer class="footer container">
      <%= debug(params) if Rails.env.development? %>
      <small>
        2B made by <a href="http://altabepha.com/">Ming</a>
      </small>
      <nav>
        <ul>
          <li><%= link_to "About",   about_path %></li>
        </ul>
      </nav>
    </footer>
  </body>
</html>
